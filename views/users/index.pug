extends ../layout/connom.pug

block  content
    h1 User list

    .d-flex
        form.ml-auto(action="/users/search", method="GET" , class="d-flex")
            input(type="text", name='q', id='input-fiel',class="form-control" )
            button(id='btn', class="btn btn-primary ml-2") Search    
    table.table  
        tr 
            th Name
            th Phone
            th Action
        each user in users
            tr  
                td
                    img(src=user.avatar, width=32)
                td= user.name
                td= user.phone
                td
                    a.btn.btn-light(href="/users/" + user.id) View
    .d-flex
        a.btn.btn-primary.ml-auto(href="/users/create") new user

    script(src='../../../script.js')